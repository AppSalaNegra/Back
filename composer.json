{
    "name": "slim/slim-skeleton",
    "description": "backend para la aplicación móvil de la sala negra",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://sala-negra.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "martín Ramonda",
            "email": "mramonda96@gmail.com",
            "homepage": "http://www.martinramonda.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mongodb": "*",
        "doctrine/annotations": "^1.13.2",
        "doctrine/mongodb-odm": "^2.7",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/guzzle": "^7.0",
        "mongodb/mongodb": "^1.18",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "zircote/swagger-php": "^4.9"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "dev-main"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "open-api": "./vendor/bin/openapi src -o openapi.json"
    }
}
